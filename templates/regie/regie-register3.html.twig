{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} MBM - Register Page {% endblock %}

{% block header '' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/mbm/register.css">
    <link rel="stylesheet" href="css/mbm/home.css">

	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
{% endblock %}

{% block content %}

    <div class="wrapper-content">
        <div class="wrapper-content__container">
            <div class="wrapper-content__container__left-side" style="background-image: url('images/regie/register3.jpg');width:56%;">
            
            </div>
                <div class="wrapper-content__container__right-side" style="width:44%;">
                    <form class="login-form validate-form">
                        
                        <span class="login-form__title">
                            Inscription
                        </span>

                        <div class="login-form__timeline">
                            <div class="login-form__timeline__span__wrap">
                                <span class="login-form__timeline__span">1</span>
                                <span class="login-form__timeline__span_text">Information personnelles</span>
                            </div>
                            <hr class="login-form__timeline__hr">
                            <div class="login-form__timeline__span__wrap">
                                <span class="login-form__timeline__span">2</span>
                                <span class="login-form__timeline__span_text">Information entreprise</span>
                            </div>
                            <hr class="login-form__timeline__hr">
                            <div class="login-form__timeline__span__wrap">
                                <span class="login-form__timeline__span active">3</span>
                                <span class="login-form__timeline__span_text">Fin</span>
                            </div>
                        </div>

                        
                        <div class="col-md-12">
                            <h3>Félicitation ! Vous pouvez maintenant créer vos campagnes publicitaires ! </h3>
                        </div>
                    
                       
                           
                        <div class="container-login-form-btn">
                        <div class="wrap-login-form-btn">
                            <div class="login-form-bgbtn"></div>
                            <button class="login-form-btn">
                                <a href="{{ path('regie-register2') }}" style="color: white;">Terminer</a>
                            </button>
                        </div>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
       
{% endblock %}

{% block footer '' %}