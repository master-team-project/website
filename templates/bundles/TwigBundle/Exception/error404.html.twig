{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} MBM - 404 Error Page {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/mbm/404.css">
{% endblock %}

{% block content %}
  <div class="container">
    <h1 class="error-404">
      404
    </h1>
      <p class="opps">OPPS! PAGE NOT FOUND</p>
      <p class="sentence">
        Sorry but the page you are looking for does not exist, have been removed, name changed or is temporarity unavailable.
      </p>

      <a class="btn btn-default btn-404 btn-lg" href="{{ path('home') }}" role="button">Back to home page</a>
  </div>
{% endblock %}